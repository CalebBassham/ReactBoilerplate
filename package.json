{
  "name": "react-boilerplate",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "yarn run build:vendor && webpack-dev-server --config app.webpack.config.js --watch --hot",
    "start": "yarn run watch",
    "dev": "yarn run watch",
    "clean": "rimraf dist && rimraf dlls",
    "build:prod": "yarn run clean && yarn run build:vendor && cross-env NODE_ENV=production webpack --config app.webpack.config.js",
    "build:dev": "yarn run clean && yarn run build:vendor && cross-env NODE_ENV=dev webpack --config app.webpack.config.js",
    "build:vendor": "yarn run clean && webpack --config vendor.webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.3",
    "enzyme-to-json": "^3.2.1",
    "eslint": "^4.10.0",
    "eslint-config-google": "^0.9.1",
    "favicons-webpack-plugin": "^0.0.7",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "regenerator-runtime": "^0.11.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "yarn": "^1.2.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/setupTests/setupTestsRequestAnimationFrame.js",
      "<rootDir>/setupTests/setupTests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/setupTests/"
    ]
  }
}
