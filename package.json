{
  "name": "react-boilerplate",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "yarn run buildVendor && webpack-dev-server --config app.webpack.config.js --watch",
    "clean": "rimraf dist && rimraf dlls",
    "build:prod": "yarn run clean && yarn run buildVendor && cross-env NODE_ENV=prod webpack --config app.webpack.config.js",
    "build:dev": "yarn run clean && yarn run buildVendor && cross-env NODE_ENV=dev webpack --config app.webpack.config.js",
    "buildVendor": "yarn run clean && webpack --config vendor.webpack.config.js"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.1.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "yarn": "^1.2.1"
  }
}
